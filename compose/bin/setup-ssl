#!/bin/bash

source ${PWD}/docker/config.env

[ -z "$1" ] && echo "Please specify a domain (ex. clientname.local)" && exit

# Generate certificate authority if not already setup
if ! docker compose --env-file=./docker/config.env exec -T -u root tls cat /root/.local/share/mkcert/rootCA.pem | grep -q 'BEGIN CERTIFICATE'; then
  bin/setup-ssl-ca
fi

# Generate the certificate for the specified domain
docker compose --env-file=./docker/config.env exec -T -u root tls mkcert -key-file nginx.key -cert-file nginx.crt "$@"
echo "Moving key and cert to /etc/nginx/certs/..."
#docker compose exec -T -u root tls chown app:app nginx.key nginx.crt
docker compose --env-file=./docker/config.env exec -T -u root tls mv nginx.key nginx.crt /etc/nginx/certs/

# Restart nginx to apply the update
echo "restarting containers to apply updates..."
bin/restart